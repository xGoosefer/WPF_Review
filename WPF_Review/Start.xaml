<Page x:Class="WPF_Review.Start"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Review"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Start">

    <Grid x:Name="StartGrid" Loaded="StartGrid_Loaded">
        <TextBlock x:Name="Output" HorizontalAlignment="Left" Margin="187,279,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="75" Width="287"/>
        <TextBox x:Name="Input" HorizontalAlignment="Left" Margin="187,389,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="287" Height="21"/>
        <Button x:Name="Submit" Content="Button" HorizontalAlignment="Left" Margin="520,385,0,0" VerticalAlignment="Top" Height="25" Width="63" Click="Submit_Click"/>
        <TextBlock x:Name="Title" HorizontalAlignment="Left" Margin="187,27,0,0" TextWrapping="Wrap" Text="{Binding Path=GameName}" VerticalAlignment="Top" Height="152" Width="396" FontFamily="Blackadder ITC" FontSize="48" TextAlignment="Center" Foreground="#FFCE9B2A"/>

    </Grid>
</Page>
