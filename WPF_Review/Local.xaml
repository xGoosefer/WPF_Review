<Page x:Class="WPF_Review.Local"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPF_Review"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Local">

    <Grid Loaded="Grid_Loaded">
        <TextBlock x:Name="LocalName" HorizontalAlignment="Left" Margin="28,42,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="24" Width="159"/>
        <TextBlock x:Name="LocalDescrip" HorizontalAlignment="Left" Margin="28,77,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="54" Width="172"/>
        <TextBlock x:Name="PlayerInfo" HorizontalAlignment="Left" Margin="614,42,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="70" Width="140"/>
        <Image x:Name="PlayerAvatar" HorizontalAlignment="Left" Height="100" Margin="614,95,0,0" VerticalAlignment="Top" Width="100" Source="/Avatar.bmp"/>
        <TextBox x:Name="plHealth" HorizontalAlignment="Left" Margin="614,195,0,0" TextWrapping="Wrap" Text="Health" VerticalAlignment="Top" Width="120"/>
        <ProgressBar x:Name="plHealthB" HorizontalAlignment="Left" Height="18" Margin="614,225,0,0" VerticalAlignment="Top" Width="120" Value="100"/>
        <Button x:Name="btnAtk" Content="Attack" HorizontalAlignment="Left" Margin="614,268,0,0" VerticalAlignment="Top" Height="27" Width="50"/>
        <Button x:Name="btnDef" Content="Defend" HorizontalAlignment="Left" Margin="684,268,0,0" VerticalAlignment="Top" Height="27" Width="50"/>
        <Button x:Name="btnOnw" Content="ONWARDS!" HorizontalAlignment="Left" Margin="40,175,0,0" VerticalAlignment="Top" Height="68" Width="160" FontFamily="Arial Black" FontSize="24" Click="btnOnw_Click"/>
        <TextBlock x:Name="EnemyName" HorizontalAlignment="Left" Margin="28,131,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="24" Width="159" Visibility="Hidden"/>
        <Image x:Name="EnemyAvatar" HorizontalAlignment="Left" Height="100" Margin="108,170,0,0" VerticalAlignment="Top" Width="100" Visibility="Hidden"/>
        <TextBox x:Name="EnemyHealth" HorizontalAlignment="Left" Margin="80,282,0,0" TextWrapping="Wrap" Text="Enemy Health" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
        <ProgressBar x:Name="EnemyHealthB" HorizontalAlignment="Left" Height="18" Margin="80,314,0,0" VerticalAlignment="Top" Width="120" Foreground="#FFC31212" Visibility="Hidden"/>

    </Grid>
</Page>
